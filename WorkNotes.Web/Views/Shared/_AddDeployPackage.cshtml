@using WorkNotes.Models.RequestModel
@model AddDeployPackageRequestModel

<!-- AllCP Form Popup -->
<div id="addDeploymentModalForm-@Model.CheckinId" class=" popup-basic allcp-form mfp-with-anim mfp-hide" style="width:40%">
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">
                <i class="fa fa-rocket"></i>Yeni Taşıma Ekle
            </span>
        </div>
        <!-- /Panel Heading -->

        <form method="post" action="@Url.Action("AddBeamerPackageId","Checkin",null)">
            @Html.HiddenFor(x => x.CheckinId)
            <div class="row">
                <div class="col-md-12">
                    <div class="section">
                        <h6><i class="fa fa-fingerprint"></i> @Html.DisplayNameFor(x => x.DeployId) </h6>
                        <label class="field">
                            <input id="BeamerPackageId" name="BeamerPackageId" class="form-control" />
                        </label>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-success pull-right" style="margin:10px">Kaydet</button>
                </div>
            </div>
            <!-- /Panel Footer -->
        </form>
    </div>
    <!-- /Panel -->
</div>
<!-- /Spec Form -->
