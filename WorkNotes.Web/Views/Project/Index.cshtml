@using WorkNotes.Entities
@using WorkNotes.Entities.Enums
@model IEnumerable<Project>


<!-- Column Center -->
<div class="chute chute-center">


    <div class="panel panel-visible" id="spy6">
        <div class="panel-heading">
            <div class="panel-title hidden-xs">
                Projelerim
            </div>
            <div class="row">
                <div class="col-md-10"></div>
                <div class="col-md-2">
                    <a href="@Url.Action("Add","Project")" type="button" class="btn btn-hover btn-dark btn-block">Yeni Proje Ekle</a>
                </div>
            </div>
        </div>
        <hr />
        <div class="panel-body pn">

            <div class="bs-component">
                <div class="tab-block mb25">
                    <ul class="nav nav-tabs tabs-border nav-justified">
                        <li class="active">
                            <a href="#devTab" data-toggle="tab">DEV</a>
                        </li>
                        <li>
                            <a href="#uatTab" data-toggle="tab">UAT</a>
                        </li>
                        <li>
                            <a href="#preprodTab" data-toggle="tab">PREPROD</a>
                        </li>
                        <li>
                            <a href="#prodTab" data-toggle="tab">PROD</a>
                        </li>
                        <li>
                            <a href="#doneTab" data-toggle="tab">DONE</a>
                        </li>
                        <li>
                            <a href="#pendingTab" data-toggle="tab">PENDING</a>
                        </li>
                        <li>
                            <a href="#cancelledTab" data-toggle="tab">CANCELLED</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div id="devTab" class="tab-pane active">
                            <div class="table-responsive">
                                <partial name="_ListProjects" model="Model?.Where(x => x.Status == ProjectStatus.DEV || x.Status == ProjectStatus.RFQ).ToList()" ></partial>
                            </div>
                        </div>
                        <div id="uatTab" class="tab-pane">
                            <div class="table-responsive">
                                <partial name="_ListProjects" model="Model?.Where(x => x.Status == ProjectStatus.UAT).ToList()" ></partial>
                            </div>
                        </div>
                        <div id="preprodTab" class="tab-pane">
                            <div class="table-responsive">
                                <partial name="_ListProjects" model="Model?.Where(x => x.Status == ProjectStatus.PREPROD).ToList()" ></partial>
                            </div>
                        </div>
                        <div id="prodTab" class="tab-pane">
                            <div class="table-responsive">
                                <partial name="_ListProjects" model="Model?.Where(x => x.Status == ProjectStatus.PROD).ToList()" ></partial>
                            </div>
                        </div>
                        <div id="doneTab" class="tab-pane">
                            <div class="table-responsive">
                                <partial name="_ListProjects" model="Model?.Where(x => x.Status == ProjectStatus.DONE).ToList()" ></partial>
                            </div>
                        </div>
                        <div id="pendingTab" class="tab-pane">
                            <div class="table-responsive">
                                <partial name="_ListProjects" model="Model?.Where(x => x.Status == ProjectStatus.PENDING).ToList()" ></partial>
                            </div>
                        </div>
                        <div id="cancelledTab" class="tab-pane">
                            <div class="table-responsive">
                                <partial name="_ListProjects" model="Model?.Where(x => x.Status == ProjectStatus.CANCELLED).ToList()" ></partial>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>